%h1 Kitchen

%p
  %b Name
  %br
  = @kitchen.name

%p
  %b Image
  %br
  = image_tag @kitchen.image.url

.form-actions
  = link_to 'Back', kitchens_path, :class => 'btn'
  = link_to 'Edit', edit_kitchen_path(@kitchen), :class => 'btn'
  = link_to 'Delete', kitchen_path(@kitchen), method: 'delete', confirm: 'Are you sure?', :class => 'btn btn-danger'

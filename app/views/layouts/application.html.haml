!!! 5
%html
  %head
  %title Classique Kitchens

  = stylesheet_link_tag 'application', media: 'all'
  = javascript_include_tag 'application'
  %link(href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css') 
  = csrf_meta_tags

%body
  .container
    %header.page-header
      =render 'shared/navigation'

      .header-inner
        %hgroup.title
          %h1.company-name Classique Kitchens
          %h2.subheading Kitchens and Appliances Cumbria

        .contact
          %p.address= "Come see our new showroom at #{address}"
          %p.phone-number= "or call us on #{phone_number}."

    .content
      - flash.each do |name, msg|
        %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
          %a.close(data-dismiss='alert') x
          = msg

      = yield

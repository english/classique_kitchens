= simple_form_for(@feature, html: { :class => 'form-horizontal' }) do |f|
  %fieldset
    %legend
      = controller.action_name.capitalize
      Feature

    = f.input :content, value: @feature.name
    = f.input :image, as: :file

    .form-actions
      = f.submit nil, :class => 'btn btn-primary'
      = link_to 'Cancel', @feature, :class => 'btn'

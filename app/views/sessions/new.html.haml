= form_tag sessions_path, :class => 'form-horizontal' do
  %fieldset
    %legend Login

    .control-group.email
      = label_tag :email, nil, :class => 'control-label'
      .controls
        = text_field_tag :email, params[:email]

    .control-group.password
      = label_tag :password, nil, :class => 'control-label'
      .controls
        = password_field_tag :password

    .form-actions= submit_tag "Log In"
